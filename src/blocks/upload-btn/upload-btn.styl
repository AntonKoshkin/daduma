.upload-btn
	position absolute
	bottom 0
	
	&:not(&--profile-sets)
		width 100%
		transform translateY(100%)
		transition transform .2s
	
		&:hover
			transform translateY(0)
	
	&--profile-sets
		size 20px
		
		right 5px
		border-radius 50%
		background-color pink
		
		&:before
		&:after
			@extend $pseudo-center
			
			background-color white
		
		&:before
			width 2px
			height 10px
		
		&:after
			width 10px
			height 2px
	
	&__label
		cursor pointer
		padding 12px 0
		position relative
		text-align center
	
	&:not(&--profile-sets) &__label
		display block
		background-color rgba(black, .5)
		
		&:before
			bicon(upload.image, 16)
			
			left 20px
			display inline-block
			content ''
			margin-right 16px
			vertical-align middle

	&__input
		display none
	
	&__text
		@extend $very-small-text
		
		color white
		vertical-align middle
	
	&--profile-sets &__text
		display none

.profile__img:hover ~ .upload-btn
.profile__no-img:hover ~ .upload-btn
	transform translateY(0)
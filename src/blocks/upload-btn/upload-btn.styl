.upload-btn
	position absolute
	bottom 0
	width 100%
	transform translateY(100%)
	transition transform .2s
	
	&:hover
		transform translateY(0)
	
	&__label
		display block
		background-color rgba(black, .5)
		cursor pointer
		padding 12px 0
		position relative
		text-align center
		
		&:before
			bicon(upload.image, 16)
			
			left 20px
			display inline-block
			content ''
			margin-right 16px
			vertical-align middle
		
	&__input
		display none
	
	&__text
		@extend $very-small-text
		
		color white
		vertical-align middle

.profile__img:hover ~ .upload-btn
.profile__no-img:hover ~ .upload-btn
	transform translateY(0)
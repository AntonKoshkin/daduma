.pagination
	display flex
	flex-wrap nowrap
	max-width 365px
	margin auto
	background-color rgba(#f5, .5)
	align-items center
	justify-content space-between
	
	&:not(.pagination--news)
		display none
		margin-bottom 30px
	
	&--news-single
		margin-bottom 30px
	
	&__btn
		@extend $btn-reset, $mega-small-text
		
		font-weight regular
		text-transform uppercase
		padding 15px 20px
	
	&__page
		@extend $very-small-text
		
		font-weight regular
		
		&--number
			size 30px
			
			display inline-block
			border 1px solid gray
			background-color white
			text-align center
			line-height 29px
			margin 10px
	
		&--gray
			color gray
	
	@media (min-width desktop)
		&:not(.pagination--news)
			display flex
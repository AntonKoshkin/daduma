.one-law
	position relative
	background-color white
	padding 10px
	margin-bottom 10px

	&__link
		position absolute
		left 0
		top 0
		width 100%
		height 100%
	
	&__header
		display flex
		justify-content space-between
		width 100%
		align-items center
		margin-bottom 10px
	
	&__face
		max-width 70px
		margin-right 5px
	
	&__img
		width 100%
	
	&__stats
		flex-basis 100%
		flex-shrink 1
		flex-grow 1
		align-self center
	
	&__results
		display none
		width 100%
		justify-content space-around
	
	&__result
		@extend $small-text
		
		&--red
			color pink
		
		&--gray
			color gray
		
		&--green
			color green
	
	&__body
		margin-bottom 20px
	
	&__title
		@extend $small-text
		
		color blue
		font-weight regular
		margin-bottom 10px
	
	&__text
		@extend $small-text
		
		color gray
		font-weight light
		display block
	
		&--bold
			font-weight regular
			// font-weight semibold
	
	&__footer
		display flex
		justify-content space-between
		align-items flex-start
	
	&__half
		margin-bottom 5px
		
		&--grades
			display flex
			justify-content flex-end
		
		&--comms
			margin-right 20px
	
	&__grades
		border 2px solid gray-light
		border-radius 3px
		align-self center
		text-align right
		padding 6px 10px
		padding-left 30px
		position relative
		
		&:before
			@extend $pseudo-left
			
			left 5px
		
		&--green
			border-color green
			color green
			margin-right 10px
			
			&:before
				bicon(thumb.up.greenK, 20)
		
		&--red
			border-color pink
			color pink
			
			&:before
				bicon(thumb.down.pink, 20)
	
	&__grade
		padding-left 5px
		
		&:before
			padding-right 1px
			
		&--red
			color pink
			
			&:before
				content '-'
		
		&--green
			color gray
		
		&--green
			color green
			
			&:before
				content '+'
	
	@media (min-width tablet)
		flex-shrink 1
		flex-basis  calc(50% - 10px)
		margin-bottom 20px
		display flex
		flex-direction column
		justify-content space-between

		&__stats
			display flex
			flex-wrap wrap
			align-self stretch
			flex-direction column
			justify-content space-around
			min-height 50px
			
		&__results
			display flex
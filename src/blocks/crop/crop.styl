.crop
	margin-bottom 10px
	text-align center
	position relative
	
	&__btns
		position absolute
		right 5px
		bottom 30px
		z-index 1

	&__rotate
		@extend $btn-reset
		slow opacity
		
		opacity .5
		
		&:hover
			opacity 1

		&--wise
			bicon(rotate.wise, 16)
			
			margin-right 5px
		
		&--counter-wise
			bicon(rotate.counterWise, 16)

	@media (min-width tablet)
		margin-left 50px
		margin-right @margin-left
.usage
	&__item
		width 100%
		padding 0 10px
		display flex
		align-items stretch

	&__content
		max-width 500px
		// border 1px solid gray-lighter
		// border-radius 3px
		margin 0 auto
		overflow hidden
	
	&__face
		@extend $font-reset
		
		// height 140px
		overflow hidden
		text-align center
		
		&:before
			content ''
			float left
			padding-bottom 50%
		
	&__img
		width 100%
		vertical-align middle
	
	&__desc
		padding 10px
	
	&__name
		@extend $small-text
		
		font-weight medium
		margin-bottom 10px
		color #0
	
	&__text
		@extend $very-small-text
		
		// color gray
		color #0
		text-align justify
		margin-bottom 10px
	
	@media (min-width desktop)
		&__item
			padding 0 20px
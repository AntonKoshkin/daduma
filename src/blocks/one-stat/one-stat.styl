.one-stat
	flex-basis 100%
	background white
	padding 20px
	padding-bottom 35px
	text-align center
	margin-bottom 30px
	max-width 300px
	margin-left auto
	margin-right auto

	&__diagram
		margin-bottom 35px

	&__img
		max-width 100%
	
	&__legend
		display flex
		flex-wrap nowrap
		// max-width 240px
		margin auto
		
		&--gender
			justify-content space-around
	
	&__gender
		@extend $very-small-text
		
		padding-left 20px
		position relative
		
		&:before
			@extend $pseudo-left
			size 12px
			
			background-color gray
		
		&--male
			&:before
				background-color blue-light
		
		&--female
			&:before
				background-color green
	
	&__leg-col
		text-align left
		
		&--left
			flex-basis 100%
			flex-shrink 1
	
	&__leg-item
		position relative
		
		&:first-child
			margin-bottom 1rem
		
		&--left
			&:not(:first-child)
				&:before
					@extend $pseudo-bottom-fullwidth
					
					border-bottom 1px dotted gray-lighter
					bottom 3px
	
	&__leg-text
		@extend $very-small-text, $one-row
		
		font-weight light
		color gray
		margin-bottom 3px
		background-color white
		position relative
		
	&__leg-item:first-child &__leg-text
		font-weight semibold
		margin-bottom 1em
	
	&__leg-item--left:not(:first-child) &__leg-text
		position relative
		padding-left 15px
		
		&:before
			@extend $pseudo-left
			size 10px
			
			background-color gray-light
			border-radius 50%
		
		&--7cb5ec
			&:before
				background-color #7cb5ec

		&--434348
			&:before
				background-color #434348

		&--90ed7d
			&:before
				background-color #90ed7d

		&--f7a35c
			&:before
				background-color #f7a35c

		&--8085e9
			&:before
				background-color #8085e9

		&--f15c80
			&:before
				background-color #f15c80

		&--e4d354
			&:before
				background-color #e4d354

		&--2b908f
			&:before
				background-color #2b908f

		&--f45b5b
			&:before
				background-color #f45b5b

		&--91e8e1
			&:before
				background-color #91e8e1
		
	@media (min-width 650px)
		flex-basis calc(50% - 15px)
		max-width none

		&:nth-child(odd)
			margin-right 15px
		
		&:nth-child(even)
			margin-left 15px
		
		&:last-child
			margin-right 0
	
	@media (min-width tablet)
		flex-basis calc(33% - 20px)
		
		&:nth-child(3n+1)
		&:nth-child(3n+2)
			margin-right 30px
			margin-left 0
		
		&:nth-child(3n)
			margin-right 0
			margin-left 0
		
		&:last-child
			margin-right 0
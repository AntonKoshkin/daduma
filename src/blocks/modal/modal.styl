.modal
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	display none
	
	&--show
		display block
	
	&__bg
		slow background-color
		
		width 100%
		height 100%
		background-color rgba(black, .5)
		cursor pointer
		
		&:hover
			background-color rgba(black, .75)
	
	&__content
		@extend $pseudo-center
		
		padding 40px 10px 35px
		background-color white
		min-width mobile-width - 20px
		max-width 100%
	
	&--show &__content
		animation fadeIn .3s linear
	
	&__close
		@extend $btn-reset, $pseudo-right-top
		size 16px
		
		top 10px
		right  @top
		
		&:before
		&:after
			@extend $pseudo
			
			top -5px
			right @top
			bottom  @top
			left  @top
			margin auto
			width 20px
			height 2px
			background-color pink
			transform-origin center
		
		&:before
			transform rotate(45deg)
		
		&:after
			transform rotate(-45deg)
			
	&__title
		@extend $big-text
		
		font-family yefimov
		font-weight regular
		margin-bottom 20px
		text-align center
	
	&__text
		@extend $very-small-text, $reg-text
		
		margin-bottom 10px
	
	@media (min-width tablet)
		&__content
			padding-left 126px
			padding-right 126px
			
		&__title
			margin-bottom 30px
			white-space nowrap
.modal
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	display none
	min-width mobile-width
	overflow auto
	
	&--crop
		display block
		overflow hidden
		top -10000px
		left -10000px
	
	&--show
		display block
	
	&--crop&--show
		top 0
		left 0

	&__bg
		slow background-color
		
		position fixed
		left 0
		top 0
		width 100%
		height 100%
		background-color rgba(black, .5)
		cursor pointer
		
		&:hover
			background-color rgba(black, .75)
	
	&--crop &__bg
		display none
	
	&--crop&--show &__bg
		display block

.modal--no-line
	.modal
		&__content
			padding 40px 10px 35px
			min-width mobile-width - 20px

.modal--line
	.modal
		&__content
			width 100%
		
	@media (min-width tablet)
		.modal
			&__content
				width 480px
				padding 0
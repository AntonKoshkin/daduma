.one-news
	@extend $clearfix
	
	position relative
	background-color white
	border 1px solid gray-lighter
	margin-bottom 10px
	padding 20px
	display flex
	flex-wrap wrap
	
	&:last-of-type
		margin-bottom 50px
	
	&__link
		position absolute
		top 0
		left 0
		width 100%
		height 100%
	
	&__tad
		order 1
		margin-bottom 10px
	
	&__date
		@extend $very-small-text, $one-row
		
		color gray-light
		font-weight light
		display block
	
	&__face
		@extend $font-reset
		
		margin-bottom 5px
		order 3
		width 100%
		overflow hidden

	&__img
		width 100%
	
	&__category
		@extend $very-small-text
		
		color pink
		text-decoration underline
		display inline-block
		margin-bottom 20px
		font-weight light
		order 4
		position relative
	
	&__text
		@extend $very-small-text
		
		font-weight light
		text-align justify
		line-height 1.5
		order 5
	
	@media (min-width tablet)
		display block
		
		&__tad
			display flex
			align-items flex-start
			
		&__date
			padding-top 3px
			
		&__face
			float left
			width 270px
			max-height 150px
			display inline-block
			margin-right 30px
		
		&__text
			padding-left 300px
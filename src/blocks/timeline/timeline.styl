.timeline
	position relative
	
	&__item
		padding-bottom 20px
		position relative
		
		&:not(:last-child):before
			@extend $pseudo
			
			width 48%
			max-width 220px
			height calc(100% + 2px)
			top 13px
			border 2px solid gray-light
		
		&:nth-child(odd)
			&:before
				left 50%
				border-left 0
		
		&:nth-child(even)
			&:before
				right 50%
				border-right 0
		
	&__number
		size 26px
		
		position relative
		background-color gray-light
		border-radius 50%
		margin 0 auto
		margin-bottom 10px
		
		span
			@extend $pseudo-center, $small-text
			
			color white
	
	&__item:first-child &__number
		background-color blue-light
	
	&__date
		@extend $very-small-text
		
		margin-bottom 5px
	
	&__title
		@extend $small-text
		
		color blue
		font-weight medium

	@media (min-width tablet)
		&__items
			display flex
			flex-wrap wrap
			align-items stretch
		
		&__item
			width 25%
			display flex
			flex-direction column
			justify-content space-between
			
			&:not(:nth-child(n+5))
				padding-bottom 75px
			
			&:nth-child(n)
				&:before
					max-width none
			
			&:nth-child(1)
				order 1
			
			&:nth-child(2)
				order 2
			
			&:nth-child(3)
				order 3
			
			&:nth-child(4)
				order 4
			
			&:nth-child(5)
				order 8
			
			&:nth-child(6)
				order 7
			
			&:nth-child(7)
				order 6
			
			&:nth-child(8)
				order 5
		
			&:not(:nth-child(n+4))
				&:before
					border 0
					border-top 2px solid gray-light
					width 100%
					left 50%
					right auto
			
			&:nth-child(4)
				&:before
					border 2px solid gray-light
					border-left 0
					right 0
					left auto
					height calc(100% + 2px)
					width 50%
			
			&:nth-child(n+5)
				&:before
					border 0
					right 50%
					left auto
					border-top 2px solid gray-light
					width 100%
			
			&:last-child
				&:before
					border 0
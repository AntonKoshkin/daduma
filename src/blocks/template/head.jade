-var projectImg		= 'http://zak.k-dev.ru/img/logo.jpg'
-var projectFavicon	= '/img/favicon.png'
-var faviconSize		= 32
-var themeColor		= '#4b5a6e'
-var themeTitle		= 'Сайт в законе'
-var themeName			= 'Сайт про законы'

-var needHTML5shiv	= true

meta(charset='UTF-8')

//- for adaptive
meta(
	name='viewport'
	content='width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no')
meta(
	http-equiv='X-UA-Compatible'
	content='IE=edge,chrome=1')
meta(
	name='HandheldFriendly'
	content='true')
meta(
	property='og:image'
	content=projectImg)
link(
	rel='icon'
	type='image/png'
	sizes=faviconSize+'x'+faviconSize
	href=projectFavicon)

//- CHROME, FF, OPERA
meta(
	name='theme-color'
	content=themeColor)

//- IE, EDGE
meta(
	name='application-name'
	content=themeName)
meta(
	name='msapplication-tooltip'
	content=themeTitle)
meta(
	name='msapplication-starturl'
	content='./')
meta(
	name='msapplication-navbutton-color'
	content=themeColor)

//- SAFARI
meta(
	name='apple-mobile-web-app-capable'
	content='yes')
meta(
	name='apple-mobile-web-app-status-bar-style'
	content='black-translucent')
meta(
	name='format-detection'
	content='telephone=no')

//- YA BR

mixin svg(name, style)
	-var style = style || ''
	if style != ''
		svg(
			role='img'
			title='svg_'+name
			class='svg-' + name + ' ' + style
			class=attributes.class)
			use(xlink:href='img/svg-sprite.svg#svg-'+name)
	else
		svg(
			role='img'
			title='svg-'+name
			class='svg-' + name
			class=attributes.class)
			use(xlink:href='img/svg-sprite.svg#svg-'+name)


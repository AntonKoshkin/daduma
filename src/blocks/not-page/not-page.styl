.not-page
	padding-top 60px
	position relative
	padding-bottom 40px
	
	&--unsubscribe
		&:before
			bicon(screamer.gray, 50)
			
			content ''
			display inline-block
			position absolute
			top 0
			left 50%
			transform translateX(-50%)
	
	&__face
		max-width 600px
		margin-bottom 20px
		margin-left auto
		margin-right auto
	
	&__img
		width 100%
	
	&__title
		font-size 1.25rem
		margin-bottom 10px
		text-align center
	
	&__text
		font-size 1rem
		text-align center
	
	&__link
		color blue-light
		text-decoration underline
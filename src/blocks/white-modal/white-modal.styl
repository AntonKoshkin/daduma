.white-modal
	position absolute
	top 0
	left 50%
	width calc(100% - 20px)
	min-width mobile-width
	background-color white
	transform translateX(-50%)
	max-width 600px
	
	&__content
		padding 45px 10px 35px
		max-width 360px
		margin auto
	
	&__title
		@extend $big-text
		
		font-family yefimov
		text-align center
		margin-bottom 15px
	
	@media (min-width tablet)
		top 50%
		transform translate(-50%, -50%)
		
		&__title
			margin-bottom 30px

.modal--show
	.white-modal
		animation fadeIn .3s linear
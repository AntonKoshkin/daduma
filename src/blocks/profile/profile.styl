.profile
	padding 10px
	margin-bottom 35px
	
	&__face
		@extend $font-reset
		
		position relative
		max-width 450px
		margin-left auto
		margin-right auto
		overflow hidden
		margin-bottom 50px
	
	&__img
	&__no-img
		width 100%
	
	&__face--no-photo &__img
		display none
	
	&__no-img
		display none
	
	&__face--no-photo &__no-img
		display inline-block
	
	&__header
		display flex
		justify-content space-between
		align-items center
	
	&__name
		@extend $big-text, $dotted
		
		color blue-light
		padding-right 10px
		margin-bottom 15px
		flex-grow 1
	
	&__btn
		@extend $btn-reset, $small-text
		
		color blue-light
		position relative
		font-size 0
		
		&:before
			display inline-block
			content ''
		
		&--profile
				margin-right 10px

			&:before
				bicon(pencil.blue, 16)
		
		&--settings
			&:before
				bicon(cogwheel.blue, 16)
	
	&__info
		margin-bottom 15px
		display flex
		flex-wrap wrap
	
	&__footer
		display flex
		flex-wrap wrap
	
	&__text
		text-align center
		margin-bottom 40px
		width 100%

	@media (min-width tablet)
		display flex
		padding 0
		
		&__face
			margin 0
			margin-right 30px
			width 265px
			flex-shrink 0
		
		&__desc
			flex-basis 100%
			flex-shrink 1
			display flex
			flex-direction column
			justify-content space-between
		
		&__header
			width 100%
		
		&__name
			margin-bottom 0
			flex-basis 100%
			flex-shrink 1
		
		&__btn
			flex-shrink 0
			font-size .875rem
			padding-left 25px

			&:before
				position absolute
				left 0
				top 0
				bottom 0
				margin-top auto
				margin-bottom auto
			
			&--settings
				&:hover
					&:before
						animation rotation .3s linear infinite

		&__info
			margin-bottom 0
		
		&__footer
			flex-wrap nowrap
			justify-content space-between
		
		&__text
			width auto
			text-align left
			margin-bottom 0
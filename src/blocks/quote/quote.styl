@keyframes hello-there
	0%
		transform translateY(260px)
	
	90%
		transform translateY(229px)

	100%
		transform translateY(145px)

@keyframes tuda-suda
	0%
		transform rotate(0)
	
	25%
		transform rotate(5deg)
	
	50%
		transform rotate(0deg)
	
	75%
		transform rotate(-5deg)
	
	100%
		transform rotate(0deg)

.quote
	display none
	width 240px
	position fixed
	right 10px
	bottom 0
	transform translateY(145px)
	transform-origin left bottom
	transition .3s
	padding-top 10px
	opacity .5
	
	&:hover
		transform translateY(15px)
		opacity 1
	
	
	&__quote
		background-color white
		border 1px solid gray
		border-radius 3px
		padding 5px
		opacity 0
		position absolute
		bottom 50%
		transition .3s
	
	&:hover &__quote
		opacity 1
		bottom 100%
		
	&__face
		@extend $font-reset
		
		background-image url(../medved--blink.png)
		background-size contain
		background-position center
	
	&__img
		// transform rotate(0)
		// transition .3s
		transform-origin bottom center
	
		&--tuda-suda
			// transform rotate(5deg)
			animation tuda-suda .3s linear
	
	&__text
		@extend $small-text
	
	@media (min-width 1700px)
		display inline-block
		animation hello-there 10s linear
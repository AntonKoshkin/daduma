.quote
	display none
	width 240px
	position fixed
	right 10px
	bottom 0
	transform translateY(145px)
	transform-origin left bottom
	transition .3s
	// padding-top 10px
	opacity .5
	
	&:hover
		transform translateY(15px)
		opacity 1
	
	&__quote
		background-color white
		border 1px solid black
		border-radius 15px
		padding 15px
		opacity 0
		position absolute
		bottom 50%
		transition .3s
		cursor default
		
		&:after
			@extend $pseudo
			bicon(quoter.white, 30)
			
			position absolute
			top 100%
			left 55px
	
	&__face:hover + &__quote
	&__quote:hover
		opacity 1
		bottom calc(100% + 10px)
		
	&__face
		@extend $font-reset
		
		// background-image url(../medved--blink.png)
		background-size contain
		background-position center
		position relative
	
	&__img
		// transform rotate(0)
		// transition .3s
		transform-origin bottom center
		width 100%
	
		&--tuda-suda
			// transform rotate(5deg)
			animation tuda-suda .3s linear
	
	&__text
		@extend $small-text
	
	@media (min-width 1700px)
		display inline-block
		animation hello-there 4s linear
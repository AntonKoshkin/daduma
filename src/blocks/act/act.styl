.act
	// padding 82px 0 0
	padding 20px 0 0

	&__wrapper
		@extend $pad-row
	
	&__face
	&__param
	&__download
		display none
	
	&__face
	&__desc
		margin-bottom 30px
	
	&__title
		@extend $title-h2
		
		color blue
		width 100%
		font-weight bold
	
	&__text-desc
		background-color white
		border 1px solid blue-light
		padding 10px
		width 100%
	
	&__date-time
		@extend $very-small-text
		
		font-weight light
		color gray-suka-ebaniy-designer
		margin-bottom 10px
		
		&--fat
			color black
	
	&__autor
		@extend $small-text
		
		text-decoration underline
		color blue
	
	@media (min-width tablet)
		padding-top 30px
		
		&__face
		&__param
		&__download
			display block

		&__face
			width 25%
			padding-right 25px

		&__img
			width 100%
			max-height 100%
			margin-bottom 10px
		
		&__desc
			@extend $row
			
			&:not(.act__desc--fullwidth)
				width 75%
		
		&__title
			width 75%
		
		&__date
			width 25%
		
		&__date-time
			text-align right
		
		&__params
			@extend $row

		&__param
			margin-bottom 15px
			
			&:nth-child(2n+1)
				width 25%
				
				padding-right 20px
			
			&:nth-child(2n)
				width 75%
		
		&__text-desc
			margin-bottom 20px
		
		&__link
			@extend $small-text
			
			color blue-light
			font-weight semibold
			margin-right 12px
			margin-left 31px
			position relative
			
			&:after
				@extend $pseudo-bottom-fullwidth
				
				height 1px
				background-color blue
				bottom -4px
			
			&:before
				@extend $pseudo-left
				
				left -31px
			
			&--pdf
				&:before
					bicon(fileFormat.pdf, 24)
			
			&--doc
				&:before
					bicon(fileFormat.doc, 24)
			
			&--docx
				&:before
					bicon(fileFormat.docx, 24)
		
		&__download-statistic
			@extend $small-text
			
			color gray-suka-ebaniy-designer
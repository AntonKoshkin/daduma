// fonts
exo			= 'Exo 2', sans-serif
yefimov		= 'yefimov', sans-serif

// weights
light			= 300
regular		= 400
normal		= regular
medium		= 500
semibold		= 600

// font-familyes
@font-face
	font-family 'yefimov'
	font-weight light
	font-style normal
	src url('../fonts/yefimov_serif/normal/light.woff') format('woff')
	
@font-face
	font-family 'yefimov'
	font-weight regular
	font-style normal
	src url('../fonts/yefimov_serif/normal/regular.woff') format('woff')
	
@font-face
	font-family 'yefimov'
	font-weight light
	font-style italic
	src url('../fonts/yefimov_serif/italic/light.woff') format('woff')
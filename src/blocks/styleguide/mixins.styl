size(size)
	width size
	height size

slow(prop)
	if prop
		transition prop .3s linear
	else
		transition .3s linear

bgi(url)
	@extend $bgi
	background-image url

btn-hover(color)
	colLight = lightness(color)
	colMinus = colLight - 5%
	
	transition .3s
	
	&:hover
		background-color color
		border-color color
		color white
	
	&:active
		background-color lightness(color, colMinus)
		border-color lightness(color, colMinus)

simple-btn-color(color)
	colLight	= lightness(color)
	colPlus	= colLight + 5%
	colMinus	= colLight - 5%
	
	background-color color
	transition background-color .3s
	
	&:hover
		background-color lightness(color, colPlus)
	
	&:active
		background-color lightness(color, colMinus)

placeholder()
	::-webkit-input-placeholder
	::-moz-placeholder
	:-moz-placeholder
	:-ms-input-placeholder
		{block}
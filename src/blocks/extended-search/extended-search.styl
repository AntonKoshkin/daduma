	&__body
		// display none
		margin-bottom 20px

	&__items
		display none
		background-color white
		padding 10px
		flex-wrap wrap
		display flex
		justify-content space-between
	
	&__item
		flex-basis 100%
		margin-bottom 10px
		
		&--flex
			display flex
			flex-wrap wrap
			justify-content space-between
		
		&--half
			flex-basis calc(50% - 5px)
	
	&__title
		@extend $small-text
		
		font-weight medium
		margin-bottom 5px
	
	&__item--flex &__title
		flex-basis 100%

	@media (min-width tablet)
		&__items
			flex-wrap nowrap
			justify-content space-between
			padding 20px 10px
		
		&__item
			flex-basis calc(25% - 8px)
			flex-shrink 1
			
			&--half
				flex-basis calc(12.5% - 8px)
			


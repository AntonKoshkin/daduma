.stat-diagram
	&__bars
		margin-bottom 10px
		
	&__img
		width 100%
	
	&__leg-item
		@extend $very-small-text
		
		display inline-block
		padding-left 20px
		position relative
		
		&:before
			@extend $pseudo-left
			size 10px
			
		&--blue
			&:before
				background-color blue-light
		
		&--green
			&:before
				background-color green-kisliy

		&:not(:last-child)
			margin-right 10px

	@media (min-width tablet)
		display flex
		flex-wrap nowrap
		
		&__bars
			flex-basis 100%
			flex-shrink 1
			margin-right 10px
			margin-bottom 0
		
		&__legend
			flex-shrink 0
		
		&__leg-item
			display block
			
			&:nth-child(n)
				margin-right 0
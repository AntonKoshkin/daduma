.gang
	flex-basis 50%
	text-align center
	margin-bottom 30px
	
	&__face
		display inline-block
		height 40px
		vertical-align middle

	&__img
		max-height 100%
		max-width 100%
	
	&__percent
		@extend $small-text
		
		display inline-block
		margin-left 10px
		vertical-align middle
		font-weight semibold
	
	@media (min-width tablet)
		flex-basis auto
		margin-bottom 0
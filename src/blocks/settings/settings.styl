.settings
	width 100%
	left 50%
	position absolute
	min-width mobile-width
	background-color white
	max-width 760px
	margin auto
	display block
	transform translateX(-50%)
	
	&__tabs
		display flex
		width 100%
	
	&__tab
		@extend $square
		
		width 20%
		position relative
		cursor pointer
		
		&--active
			background-color gray-lighter
			
			&:after
				@extend $pseudo-left
				
				width 3px
				background-color blue-again
				height 100%
				left 0px

	&__tab-name
		@extend $font-reset
		
		border-top 1px solid gray-lighter
		border-bottom 1px solid gray-lighter
		border-left 1px solid gray-lighter
		border-right 1px solid transparent
		display block
		margin auto
		width 100%
		height 100%
		position absolute
		
		&:after
			@extend $pseudo-center-old
	
	&__tab:last-child &__tab-name
		border-right 1px solid gray-lighter
		
	&__tab--account &__tab-name
		&:after
			bicon(person. withI)
			
			width 50%
			height @width
	
	&__tab--security &__tab-name
		&:after
			bicon(shield.blue)
			
			width 45%
			height @width
	
	&__tab--keyholder &__tab-name
		&:after
			bicon(key.blue)
			
			width 45%
			height @width
	
	&__tab--agreement &__tab-name
		&:after
			bicon(paper.withPencil)
			
			width 50%
			height @width
	
	&__tab--delete &__tab-name
		&:after
			bicon(trash.bin)
			
			width 45%
			height @width
	
	&__contents
		padding 10px
		position relative
	
	&__content
		display none
		
		&--show
			display block
	
	&__text
		@extend $small-text
		
		color gray
		font-weight light
		
		&--fat
			font-weight regular
			color black
		
		&--margined
			margin-bottom 10px
	
	@media (min-width tablet)
		display flex
		max-height 500px
		
		&__tabs
			width 100px
			flex-wrap wrap
			flex-shrink 0
		
		&__tab
			width 100%
		
		&__tab-name
			border-right 1px solid gray-lighter
			border-left 1px solid gray-lighter
			border-top 1px solid gray-lighter
			border-bottom 1px solid transparent
			
		&__tab:last-child &__tab-name
			&:last-child
				border-bottom 1px solid gray-lighter
		
		&__contents
			padding 45px
			padding-right 60px
			padding-bottom 10px
			flex-basis 100%
			flex-shrink 1
			position static
		
		@media (min-height 500px)
			top 50%
			transform translate(-50%, -50%)

.modal--show
	.settings
		animation fadeIn .3s linear
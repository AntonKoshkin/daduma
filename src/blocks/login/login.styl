.login
	position absolute
	width 100%
	top 0
	left 0
	background-color white

	&__title
		@extend $mid-big-text
		
		color white
		background-color blue
		font-family yefimov
		font-weight regular
		text-align center
		padding 13px 0
	
	&__body
		padding 20px 15px 10px
	
	&__tabs
		margin-bottom 20px
	
	&__btn
		@extend $btn-reset, $not-so-big-text
		
		font-family yefimov
		color soc-gp
		position relative
		
		&:before
			@extend $pseudo-bottom-fullwidth
			
			height 1px
			background-color rgba(soc-gp, .7)
			bottom -2px
		
		&--active
			color black
			text-decoration none
			pointer-events none
			
			&:before
				display none
	
	&__or
		@extend $not-so-big-text
		
		font-family yefimov
		padding 0 10px
	
	@media (min-width modal-bp)
		max-width 480px
		left 50%
		top 50%
		transform translate(-50%, -50%)
		
		&__body
			padding 30px

.modal--show
	.login
		animation fadeIn .3s linear
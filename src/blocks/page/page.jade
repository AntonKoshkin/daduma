mixin pageTitle(h, title)
	if attributes.mods
		-var mods = []
		each mod, i in attributes.mods
			-mods[i] = 'page__title--' + mod

	case h
		when 1
			h1.page__title.page__title--h1(
				class=mods)!=title
				
		when 2
			h2.page__title.page__title--h2(
				class=mods)!=title
				
		when 3
			h3.page__title.page__title--h3(
				class=mods)!=title
				
		when 4
			h4.page__title.page__title--h4(
				class=mods)!=title
				
		when 1
			h1.page__title.page__title--h1(
				class=mods)!=title
				
		when 1
			h1.page__title.page__title--h1(
				class=mods)!=title

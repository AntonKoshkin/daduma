mixin doer
	.doer
		if block
			block

mixin dFace(img)
	.doer__face
		.doer__f-img
			img.doer__img(
				src=img
				alt='Имя деятеля')
		if block
			block

mixin dInfo
	.doer__info
		if block
			block

mixin dDesc
	.doer__desc
		if block
			block

mixin dBlock
	.doer__block
		if block
			block

mixin dTitle(text)
	if attributes.mods
		-var mods = []
		each mod, i in attributes.mods
			-mods[i] = 'doer__title--' + mod

	p.doer__title!=text

mixin dText(text)
	if attributes.mods
		-var mods = []
		each mod, i in attributes.mods
			-mods[i] = 'doer__text--' + mod

	p.doer__text(
		class=mods
		data-icon=attributes['data-icon'])!=text

mixin dRow
	.doer__row
		if block
		block
.burger
	@extend $font-reset, $btn-reset
	
	width 35px
	height 26px
	position relative
	
	&__strip
		width 100%
		height 6px
		position absolute
		background-color blue
		border-radius 1px
		
		&:nth-child(1)
		&:nth-child(3)
			@extend $hor-center
		
		&:nth-child(1)
			top 0
		
		&:nth-child(2)
			@extend $center

		&:nth-child(3)
			bottom 0
	
	@media (min-width tablet)
		display none
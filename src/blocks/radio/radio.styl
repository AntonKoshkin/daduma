.radio
	&__label
		position relative
		cursor pointer
	
	&__input
		@extend $hidden-input
	
	&__text
		@extend $small-text
		
		color gray-light
		font-weight regular
		position relative
		padding-left 22px

		&:before
			@extend $pseudo-left
			size 16px
			
			border 1px solid gray-light
			background-color blue
			box-shadow inset 0 0 0 10px white

	&__input:checked + &__text
		color black
		
		&:before
			box-shadow inset 0 0 0 2px white
	
	&--lower-case &__text
		text-transform lowercase
	
	&__img
		opacity .5
		height 34px
		width auto
	
	&__input:checked + &__img
		opacity 1

.profile-sets__variants
	.radio
		margin-bottom 10px

		&--nothing
			@extend $hidden-input
			size 0
			overflow hidden
			margin 0
		
		&:not(:last-child):not(.radio--nothing)
			margin-right 20px
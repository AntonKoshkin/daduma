.checkbox
	@extend $font-reset
	
	margin-bottom 10px
	
	&--lefted
		float left
	
	&--margined
		margin-bottom 30px
	
	&--no-margin
		margin-bottom 0
	
	&__label
		cursor pointer
		position relative
	
	&__input
		position absolute
		clip rect(0, 0, 0, 0)
	
	&__text
		@extend $small-text
		
		position relative
		padding-left 22px
		
		&:before
			@extend $pseudo-left
			size 16px
			
			border 1px solid gray-light
			background-color blue
			box-shadow inset 0 0 0 10px white
	
	&__input:checked + &__text
		&:before
			box-shadow inset 0 0 0 2px white

.form--login
	@media(min-width modal-bp)
		.checkbox
			align-self center
.sides
	margin-bottom 30px
	
	&__wrapper
		max-width 1200px
		width 100%
		margin auto
		padding 0 10px
	
	&__titles
	&__contents
		@extend $row
		
		background-color white
	
	&__title
		@extend $title-h1
		
		width 50%
		background-color gray-lighter
		text-align center
		padding 14px
		cursor pointer
		
		&--active
			background-color white
		
		&--invise
			display none
		
		&--green
			color green
		
		&--red
			color pink
	
	&__contents
		padding 10px
	
	&__content
		display none
		text-align center
		
		&--show
			display block
	
	&__text
		text-align justify
		// margin-bottom 35px
		margin-bottom 10px
		overflow hidden
		position relative
		
		p
			@extend $very-small-text
			
			padding-bottom 10px
			color gray
			padding-left 40px
			position relative
			
			&:first-letter
				text-transform uppercase
				
			&:before
				@extend $pseudo-left-top
				
				left 5px
	
	&__content--red
		p
			&:before
				bicon(ex, 16)
	
	&__content--green
		p
			&:before
				bicon(galka, 16)
	
	&__suggestion
		margin-bottom 20px
	
	&__sugg-btn
		@extend $btn-reset, $not-so-small-text
		
		text-transform uppercase
		text-decoration underline
		padding 5px
		
	&__content--green &__sugg-btn
		color green
	
	&__content--red &__sugg-btn
		color pink
	
	&__expand
		display none
		text-align left
		padding-left 60px
	
	&__expander
		@extend $btn-reset, $small-text
		
		font-weight semibold
		text-decoration underline
		margin-bottom 20px
	
	@media (min-width tablet)
		&__wrapper
			padding 0 20px
			
		&__title
			cursor default
			background-color #e
			margin-bottom 0
			
			&--invise
				display inline
			
			&:last-child
				background-color gray-lighter
		
		&__contents
			padding 20px 0
			align-items stretch
			border 1px solid gray-lighter
			border-top none
		
		&__content
			flex-basis 50%
			display flex
			flex-direction column
			justify-content space-between
			
			&:first-child
				border-right 1px solid gray-lighter
		
		&__text
			padding 0 20px
			
		&__suggestion
			margin-bottom 0
.ie10
	.sides
		&__titles
			font-size 0
			display block
			
		&__title
			width 50%
			font-size 1rem
			display inline-block
		
		&__content
			max-width 100%
	
		@media (min-width tablet)
			&__contents
				font-size 0
				display table
			
			&__content
				display table-cell
				width 50%
				font-size 1rem
				vertical-align top
				position relative
				padding-bottom 30px
			
			&__suggestion
				position absolute
				bottom 0
				left 50%
				transform translateX(-50%)
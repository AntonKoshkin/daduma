.diagram
	margin-bottom 20px
	
	&--stat
		display flex
		flex-wrap nowrap
		flex-basis 50%
	
	&__showing
		margin 0 auto 10px
	
	&__img
		&--pie
		&--pie-deputy
			size 135px
			
			border-radius 50%
	
		&--bars
			width 100%
			max-width 400px

	&__description
		@extend $very-small-text
		
		padding 10px
	
	&--stat &__showing
		flex-grow 0
		width 150px
	
	&--stat &__legends
		flex-grow 1
.diagram
	margin-bottom 20px
	position relative
	
	.about-act__diagrams &
		&:not(:last-child)
			margin-right 20px
	
	&--stat
		display flex
		flex-wrap nowrap
		flex-basis 50%
		justify-content center
		margin-bottom 0
		align-items center
		
	&__showing
		margin 0 auto 10px
		margin-bottom 0
		display flex
		justify-content center
		align-items center
	
	&__lega
		list-style-type none
		margin-left 10px
	
	&__l-item
		@extend $small-text
		
		white-space nowrap
		display block
		padding-left 20px
		// padding-left 55px
		position relative
		text-align left
		
		&:before
			@extend $pseudo-left
			size 10px
			
			border-radius 50%
			left 5px
			// width 30px
			// height 3px
		
		&--7cb5ec
			&:before
				background-color #7cb5ec

		&--434348
			&:before
				background-color #434348

		&--90ed7d
			&:before
				background-color #90ed7d

		&--f7a35c
			&:before
				background-color #f7a35c

		&--8085e9
			&:before
				background-color #8085e9

		&--f15c80
			&:before
				background-color #f15c80

		&--e4d354
			&:before
				background-color #e4d354

		&--2b908f
			&:before
				background-color #2b908f

		&--f45b5b
			&:before
				background-color #f45b5b

		&--91e8e1
			&:before
				background-color #91e8e1
		
		&--green
			&:before
				background-color green
		
		&--red
			&:before
				background-color pink
		
		&--gray
			&:before
				background-color gray-lighter
		
		&--blue
			&:before
				background-color blue
	
	&--stat &__showing
		flex-grow 0
		width 135px
		margin 0 75px 0 0
	
	&__img
		width 100%
		
		&--pie
		&--pie-deputy
			size 135px
			size 95px
			
			border-radius 50%
	
		&--bars
			max-width 400px

	&__description
		@extend $very-small-text
		
		padding 10px
		padding-bottom 0
		// padding-top 45px
		padding-top 15px
	
	&--big-name &__description
		font-size 20px
		font-weight 500
	
	&--stat &__description
		color gray
	
	&--stat &__legends
		margin-bottom 36px

	&__legend
		@extend $not-so-small-text
		
		font-weight regular
		margin-bottom 10px
		// padding-left 46px
		padding-left 20px
		position relative
		margin-left 5px
		
		&:before
			@extend $pseudo-left
			size 10px
			
			// width 30px
			// height 3px
			border-radius 50%
		
		&--red
			&:before
				background-color pink
		
		&--yellow
			&:before
				background-color yellow
		
		&--blue
			&:before
				background-color blue
		
		&--green
			&:before
				background-color green
		
		&--cyan
			&:before
				background-color #00bcd4
		
		&--gray
			color gray-light
			font-weight light
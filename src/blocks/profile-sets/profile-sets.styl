.profile-sets
	width 100%
	left 50%
	position absolute
	min-width mobile-width
	background-color white
	max-width 760px
	margin auto
	display block
	transform translateX(-50%)
	padding 30px 10px
	
	&__face
		@extend $font-reset
		
		width 120px
		margin auto
		position relative
	
	&__img
		width 100%
		border-radius 50%
		
	&__no-img
		border-radius 50%
		display none
	
	@media (min-width tablet)
		display flex
		
		@media (min-height 500px)
			top 50%
			transform translate(-50%, -50%)
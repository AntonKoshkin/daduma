.button
	&--center
		text-align center
	
	&--margined
		margin-bottom 30px

	&__btn
		@extend $btn-reset, $not-so-small-text
		simple-btn-color pink

		color white
		font-weight regular
		padding 13px 19px 9px
		border-bottom 4px solid lightness(pink, 50%)
		min-width 100px
	
	&--keyholder &__btn
		padding 13px 30px 9px
.select2-selection
	position relative
	line-height 1em
	// font-size 0
	
	// &:before
	// 	@extend $pseudo
	// 	triangle down 3px 2px black
	// 	top 20px
	// 	right 10px
	
	&__clear
		font-size 0
		
	&__choice
		@extend $small-text

		margin-bottom 5px
		
		&__remove
			size 10px
			position relative
			
			&:before
			&:after
				@extend $pseudo-center-old
				
				width 10px
				height 1px
				background-color black
				transform-origin center
			
			&:before
				transform rotate(-45deg)
			
			&:after
				transform rotate(45deg)
	
	&__rendered
		display flex
		flex-wrap wrap
		align-items center
		justify-content flex-start
		padding 5px

.select2-search
	flex-basis 10%
	flex-grow 1

.select2-container
	&--default&--focus
	&--default
		.select2-selection
			&--multiple
			&--single
				border 1px solid gray-lighter
			
			&--single
				display flex
				flex-wrap wrap
				align-items center
				justify-content flex-start
				padding 1px 10px 2px
				height auto
				
				.select2-selection__arrow
					top 7px
					right 7px
				
				.select2-selection__rendered
					font-size 14px

	.select2-search--inline
		.select2-search__field
			font-size .875rem
			width 100% !important
			margin-top 0
			padding 7px 10px

.select2-results
	&__option
		@extend $small-text
	
		&:not(:last-child)
			border-bottom 1px solid gray-lighter
		
.select2-container--default
	.select2-results
		&__option
			&--highlighted[aria-selected]
				background-color #fb
				color black

.select2-dropdown
	border 1px solid gray-lighter
	border-radius 0 0 3px 3px
	overflow hidden

.select2-container--default
	.select2-results
		> .select2-results__options
			max-height 123px

.select
	&--city
		.select2-selection
			&__clear
				font-size 0
			
			&__rendered
				padding-top 0
				padding-bottom 0
				font-size 14px

.extended-search
	.select2-selection
		&__choice
			slow background-color
			
			background-color #f9
			border none
			padding 4px 5px
			margin 2px
			
			&:hover
				background-color #eb
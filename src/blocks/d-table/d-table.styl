.d-table
	overflow-x auto
	
	&__content
		min-width 500px
		
		&--miw300
			min-width 300px
		
	&__row
		display flex
		justify-content center
		align-items stretch
		border-bottom 2px solid #e8
		
		&:nth-child(odd)
			background-color #f8
		
		&:nth-child(even)
			background-color white
	
	&__cell
		display flex
		justify-content center
		align-items center
		text-align center
		flex 1
		min-height 70px
		padding 5px
		
		&:not(:last-child)
			border-right-width 1px
			border-right-style solid
	
	&__row:nth-child(odd) &__cell:not(:last-child)
		border-right-color white
	
	&__row:nth-child(even) &__cell:not(:last-child)
		border-right-color #f8
	
	@media (min-width desktop)
		&__cell
			min-height 50px
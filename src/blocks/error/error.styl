@keyframes showError
	10%
		transform translateX(0)
	
	90%
		transform translateX(0)
		opacity 1
	
	100%
		transform translateX(0)
		opacity 0

.error
	position fixed
	top 0
	right 0
	width 380px
	padding 30px 25px 30px 80px
	background-color rgba(black, .95)
	transform translateX(100%)

	&:before
		@extend $pseudo
		bicon(attention.roundWhite, 34)
		
		top 30px
		left 25px
	
	&--show
		animation showError 5s linear

	&__text
		@extend $small-text
		
		color white